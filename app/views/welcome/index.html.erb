<div class="container">
  <div class="splash">
    <div>
      <%= image_tag "POPOS.svg", class: "logo" %>
    </div>

    <div class="info-panel">
      <p>
        Privately-Owned Public Open Spaces (POPOS) are publicly accessible spaces in the form of plazas, terraces, atriums, small parks, and even snippets which are provided and maintained by private developers. For more information, check out the <a href="http://sf-planning.org/privately-owned-public-open-space-and-public-art-popos">SF Planning Departments' page on POPOS</a>
      </p>
    </div>

  </div>
</div>

<div id="popos-viewer">
  <div>
    <button id="view-switcher-button">view as list</button>
  </div>

  <div class="placeholder-loading">
    Loading...
  </div>

  <div id="list-view" class="container" style="display:none">
    <%= paginate @popos %>
    <%= render 'popos/popo_info' %>
    <%= paginate @popos %>
  </div>

  <div id="map-view">
    Map view goes here
  </div>
</div>

<script id="info-window-template" type="text/x-handlebars-template">
  <div id="info-window">
    <div class="title">
      <h1>{{name}}
      </h1>
      <p>{{address}}</p>
    </div>

    <div class="popo-info">
      {{#if image}}
      <img src="http://sf-planning.org/ftp/files/GIS/POPOS/Pics/Small/{{image}}" alt="">
      {{/if}}
      <p><i>{{location}}</i></p>
      {{#if seating}}
      <p><b>Seating: </b>Yes. {{seating_description}}</p>
      {{/if}}
      {{#if hours}}
      <p><b>Hours:</b> {{hours}}</p>
      {{else}}
      <p><b>Hours:</b> {{hours_type}}</p>
      {{/if}}
      {{#if accessibility}}
      <p><b>Accessibility:</b> {{accessibility}}</p>
      {{/if}}
      <p><b>Description:</b><br>{{description}}</p>
    </div>
  </div>
</script>

<script id="list-info-template" type="text/x-handlebars-template">
  <div id="list-info">
    <div class="title">
      <h1>{{name}}
      </h1>
      <p>{{address}}</p>
    </div>

    <div class="popo-info">
      {{#if image}}
      <img src="http://sf-planning.org/ftp/files/GIS/POPOS/Pics/Small/{{image}}" alt="">
      {{/if}}
      <p>{{location_type}}, <i>{{location}}</i></p>
      {{#if seating}}
      <p><b>Seating: </b>Yes. {{seating_description}}</p>
      {{/if}}
      {{#if hours}}
      <p><b>Hours:</b> {{hours}}</p>
      {{else}}
      <p><b>Hours:</b> {{hours_type}}</p>
      {{/if}}
      {{#if accessibility}}
      <p><b>Accessibility:</b> {{accessibility}}</p>
      {{/if}}
      <p><b>Description:</b><br>{{description}}</p>
    </div>
  </div>
</script>
